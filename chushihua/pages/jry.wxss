.overlay-containee {
  position: relative;
  width: 100%;
  height: 400rpx; /* 调整高度以适应图片 */
}

.overlay-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片填充整个容器 */
}

.overlay-text {
  position: absolute;
  top: 38%; /* 垂直居中 */
  left: 56%; /* 水平居中 */
  transform: translate(-50%, -50%); /* 文字居中 */
  font-family: 'Microsoft YaHei', 'Microsoft YaHei UI', '微软雅黑', '黑体-SC', '黑体', sans-serif;
  font-size: 22rpx;
  color: #131e3c; /* 设置文字颜色 */
  z-index: 1; /* 确保文字在图片之上 */
}
